@{
    ViewData["Title"] = "Cafeteria Menu";
}
@section Styles {
    <link rel="stylesheet" href="~/css/menuindex.css" />
}

<div class="text-center mt-5">
    <h1 class="display-4 mb-3">Welcome to YumYard!</h1>
    <p class="lead mb-4">Order delicious meals and snacks with ease.</p>
    <img src="~/images/cafeteria-welcome.jpg" alt="Cafeteria" style="max-width: 350px; width: 100%; border-radius: 12px; box-shadow: 0 2px 12px rgba(0,0,0,0.08);" class="mb-4" />
    <div class="d-flex justify-content-center gap-3">
        <a class="btn btn-primary btn-lg" asp-controller="Menu" asp-action="MenuList">View Menu</a>
    </div>
</div>
