@model List<CafeteriaApp.Models.OrderWithUserViewModel>

@section Styles {
    <link rel="stylesheet" href="~/css/admin-orders.css" />
}

<div class="container my-5">
    <h2 class="mb-4 text-center text-primary fw-bold">All Orders</h2>
    <div class="row g-4">
        @if (Model != null && Model.Any())
        {
            @foreach (var record in Model)
            {
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="order-card card shadow-sm h-100">
                        <div class="card-body">
                            <h5 class="card-title mb-2 text-success">
                                <i class="bi bi-calendar-event"></i>
                                @record.OrderDate.ToString("f")
                            </h5>
                            <p class="card-subtitle mb-2 text-muted">
                                <i class="bi bi-person-circle"></i>
                                <strong>User:</strong> @record.UserEmail
                            </p>
                            <ul class="list-group list-group-flush mb-3">
                                @foreach (var item in record.Items)
                                {
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <span>@item.MenuItem.Name</span>
                                        <span class="badge bg-primary rounded-pill">@item.Quantity</span>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="alert alert-info text-center">No orders found.</div>
            </div>
        }
    </div>
</div>